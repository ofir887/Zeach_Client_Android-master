<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/beach_name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_weight="0.15"
        android:clickable="true"
        android:ems="10"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold"

        android:layout_alignParentTop="true"
        tools:ignore="ObsoleteLayoutParam" />

    <TextView
        android:id="@+id/beach_country"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/beachButton" />

    <TextView
        android:id="@+id/beach_capacity"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/beach_name"
        android:layout_alignBottom="@+id/beach_name"
        android:layout_alignStart="@+id/beach_country" />

    <Button
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:id="@+id/beachButton"
        android:text="Move To Beach"
        android:layout_marginEnd="14dp"
        android:textAllCaps="false"
        android:background="@drawable/circlebutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>