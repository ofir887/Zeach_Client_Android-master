<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/circle_beach_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />


    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/beach_name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_weight="0.15"
        android:clickable="true"
        android:ems="10"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/circle_beach_image" />

    <TextView
        android:id="@+id/beach_omes"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/beach_name"
        android:layout_toEndOf="@+id/circle_beach_image" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/beach_name"
        android:layout_alignBottom="@+id/beach_name"
        android:layout_toEndOf="@+id/beach_name"
        android:layout_marginStart="56dp"
        android:id="@+id/beachButton"
        android:text="Remove" />


</RelativeLayout>