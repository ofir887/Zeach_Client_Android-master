<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zeach.ofirmonis.zeach.Activities.MainActivity">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Return"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="32dp"
        android:textAllCaps="false"
        android:background="@drawable/circlebutton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/section_label" />

    <CheckBox
        android:id="@+id/importFriendsFromFacebookCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Friends from Facebook"
        android:layout_marginTop="17dp"
         />

    <CheckBox
        android:id="@+id/HideFromFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide Me to friends When I'm on the Beach"
        android:layout_below="@+id/importFriendsFromFacebookCheckbox"
        android:layout_toEndOf="@+id/section_label" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/HideFromFriends"
        android:layout_alignTop="@+id/return_button"
        android:layout_marginEnd="18dp"
        android:text="Save"
        android:textAllCaps="false"
        android:background="@drawable/circlebutton" />

</RelativeLayout>
